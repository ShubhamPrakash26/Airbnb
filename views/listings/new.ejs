<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3>Create a new Listing</h3>
        <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="Enter Title" class="form-control" required minlength="3" maxlength="50">
                <div class="invalid-feedback">
                    Enter a title
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="Enter description" class="form-control" required minlength="10" maxlength="500"></textarea>
                <div class="invalid-feedback">
                    Enter a description
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="text" name="listing[price]" placeholder="Enter Price" class="form-control" required min="399" step="0.01" max="999999.99">
                    <div class="invalid-feedback">
                        Price can not be less than 399
                    </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="Enter country" class="form-control" required maxlength="50">
                    <div class="invalid-feedback">
                        Enter a valid country
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select name="listing[category]" class="form-select" required>
                    <option value="trending" selected>Trending</option>
                    <option value="rooms">Rooms</option>
                    <option value="food">Food</option>
                    <option value="beach">Beach</option>
                    <option value="mountains">Mountains</option>
                    <option value="city">City</option>
                    <option value="forest">Forest</option>
                    <option value="snow">Snow</option>
                    <option value="water">Water</option>
                    <option value="airports">Airports</option>
                    <option value="cars">Cars</option>
                    <option value="bikes">Bikes</option>
                    <option value="buses">Buses</option>
                    <option value="trains">Trains</option>
                    <option value="space">Space</option>
                    <option value="love">Love</option>
                    <option value="groups">Groups</option>
                </select>
                <div class="invalid-feedback">Please select a category</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" name="listing[image]" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="Enter Location" class="form-control" required maxlength="50">
                <div class="invalid-feedback">
                    Enter a location
                </div>
            </div>
            <button type="submit" class="btn btn-dark add-btn"> Add Listing </button>
            <br><br>
        </form>
    </div>
</div>